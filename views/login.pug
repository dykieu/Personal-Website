extends layout

block content
	.container.signup
		.d-flex.justify-content-center.h-100
			.card
				.card-header
					h3 Login
				.card-body
					form(method='POST' action='')
						.input-group.form-group
							span.input-group-text
								i.fas.fa-user
							input.form-control(type='text', placeholder='name', name='name')
						.input-group.form-group
							span.input-group-text
								i.fas.fa-key
							input.form-control(type='password', placeholder='Password', name='password')
						.form-group
							input.btn.float-right.login_btn(type='submit', value='Login')
				.card-footer
					.d-flex.justify-content-center.links
						a(href='signup') Sign Up