extends layout

block content
  .container.signup
        .d-flex.justify-content-center.h-100
          .card
            .card-header
              h3 Sign Up
            .card-body
              form(method='POST' action='')
                .input-group.form-group
                    span.input-group-text
                        i.fas.fa-user
                    input.form-control(type='text', placeholder='Name', name='name' required='')
                .input-group.form-group
                    span.input-group-text
                        i.fas.fa-key
                    input.form-control(type='password', placeholder='Password', name='password' required='')
                .input-group.form-group
                    span.input-group-text
                        i.fas.fa-user
                    input.form-control(type='text', placeholder='register key', name='key' required='')
                .form-group
                    input.btn.float-right.login_btn(type='submit', value='signup')
            .card-footer
                .d-flex.justify-content-center.links
                    a(href='login') login page